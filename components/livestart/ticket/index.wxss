.content {
  font-size: 26rpx;
  margin-bottom: 24rpx;
}

.meta {
  font-size: 26rpx;
  margin-bottom: 24rpx;
}

.contact {
  font-size: 24rpx;
  margin-bottom: 24rpx;
  color: #333;
}

.ticket {
  padding: 24rpx;
  background-color: #F1F4F2;
  position: relative;
  border-radius: 12rpx;
}

.ticket .hide {
  display: none;
}

.city {
  border: 1px solid rgb(102, 102, 102);
  background-color: rgb(102, 102, 102);
  color: #E9F4EF;
  padding: 1rpx 12rpx;
  font-size: 28rpx;
  /* font-family: DINPro, HelveticaNeue, Helvetica, Arial, sans-serif; */
}

.showTime{
  border: 1px solid #ccc;
  color: #666;
  padding: 1rpx 12rpx 1rpx 4rpx;
  font-size: 28rpx;
  font-family: DINPro, HelveticaNeue, Helvetica, Arial, sans-serif;
}

.title {
  margin-bottom: 14rpx;
  font-size: 34rpx;
}

.footer {
  flex-direction: row;
  padding-top: 12rpx;
  border-top: 1px solid #E5E5E5;
  color: #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer .info {
  font-size: 24rpx;
}

.footer .action {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 60rpx;
  font-size: 36rpx;
}

.img-clipbaoard {
  width: 28rpx;
  height: 28rpx;
  vertical-align: -6rpx;
  margin-left: 20rpx;
}

.status {
  position: absolute;
  right: 0;
  top: 0;
  height: 26px;
  width: 80px;
}

.status image {
  width: 100%;
  height: 100%;
}

.status text {
  position: absolute;
  color: #ffffff;
  top: 4rpx;
  right: 26rpx;
  font-size: 28rpx;
}