.notice-content {
  display: flex;
  align-items: center;
}

.join-group-button-img-notice {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -4rpx;
}

.sticky-header {
  padding: 0 24rpx;
  width: 702rpx !important;
}

.sticky-header-fixed {
  box-shadow: rgba(98, 178, 143, 0.2) 0px 1px 4px;
}

/* ad-section 滚动广告位 */
.ad-section {
  margin: 0rpx 24rpx 24rpx 24rpx;
  border-radius: 28rpx;
}

.ad-section .swiper {
  border-radius: 28rpx;
  height: 360rpx;
}

.ad-section .swiper-item {
  width: 700rpx;
  height: 360rpx;
  border-radius: 28rpx;
  background-size: cover;
}

/* END ad-section 滚动广告位 */

/* START movable-area 加群按钮 */
.join-group {
  pointer-events: none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0%;
  top: 0%;
}

.join-group-button {
  pointer-events: auto;
  left: 80%;
  top: 80%;
  text-align: center;
  vertical-align: middle;
}

.join-group-button-img {
  width: 108rpx;
  height: 108rpx;
}
/* END movable-area 加群按钮 */

