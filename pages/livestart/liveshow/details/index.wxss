
.header-box {
  width: 100%;
  padding-top: 100rpx;
  background-image: linear-gradient(129deg, #D3F6E7 0%, #F6FAED 49%, #FFFFFF 82%);
}

.detail-bg {
  width: 275rpx;
  height: 368rpx;
  display: block;
  top: 40rpx;
  left: 24rpx;
  position: absolute;
}

.detail-bg image {
  border-radius: 16px;
  width: 280rpx;
  height: 360rpx;
  background: #FFFFFF;
}

.detail-box {
  background: #FFFFFF;
  border-radius: 40px 40px 0 0;
  padding: 20rpx 24rpx 20rpx 328rpx;
  min-height: 320rpx;
}

.detail-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
  overflow-wrap: break-word;
}
.detail-performers {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 20rpx;
  overflow-wrap: break-word;
}
.detail-day, .detail-site {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}
.detail-day image, .detail-site image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 14rpx;
  margin-bottom: 4rpx;
}

.detail-site text {
  font-size: 28rpx;
  font-style: italic;
  text-decoration: underline;
}

.detail-line {
  margin: 0 24rpx 30rpx;
  border-bottom: 1rpx solid #E5E5E5;
  background-color: #fff;
}

.info-box {
  margin: 0 24rpx;
  border-radius: 8px;
  padding: 30rpx 24rpx;
  background-color:  #F1F4F2;
  font-size: 26rpx;
  color: #666;
  min-height: 860rpx;
}

.info-title {
  font-size: 27rpx;
  color: #999;
  margin-bottom: 16rpx;
}
.info-content {
  margin-bottom: 30rpx;
  overflow-wrap: break-word;
}
.other-box {
  padding: 30rpx 24rpx;
  text-align: center;
  padding-bottom: 400rpx;
}
.qrcode-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 280rpx;
  margin-bottom: 20rpx;
}
.img-icon {
  width: 14rpx;
  height: 20rpx;
  margin: 0 80rpx;
}
.img-qrcode {
  width: 280rpx;
  height: 280rpx;
  background: #fff;
}
.qrcode-text {
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
}
.img-clipboard {
  width: 28rpx;
  height: 28rpx;
  vertical-align: -6rpx;
}
.img-clipbaoard2 {
  width: 28rpx;
  height: 28rpx;
  vertical-align: 6rpx;
}
.btn-ticket {
  color: #62B28F;
  display: inline-block;
  width: 140rpx;
  text-align: center;
  border: 2rpx solid #62B28F;
  border-radius: 40rpx;
  line-height: 44rpx;
  height: 44rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 160rpx;
  background: #fff;
}
.footer-box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 100%;
}
.icon-like {
  width: 46rpx;
  height: 40rpx;
}
.footer-box button {
  width: 72%;
  padding: 0;
  margin: 0;
  border: 2rpx solid #62B28F;
  border-radius: 40px;
  height: 80rpx;
  background-color: #fff;
  line-height: 72rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #62B28F;
}