/**index.wxss**/
.contactInfo {
  margin-top: 90rpx;
}

.qrcode-container {
  position: absolute;
  z-index: 9999;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 520rpx;
  text-align: center;
  top: 240rpx;
}

.qrcode {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
}

.qrcode image {
  height: 400rpx;
  width: 400rpx;
}


.qrcode-text {
  padding: 80rpx 60rpx;
  font-size: 28rpx;
  font-weight: bolder;
  text-align: center;
  line-height: 52rpx;
  color: rgb(110, 110, 110) !important;
  width: 400rpx;
}

.qrcode-text image{
  height: 240rpx;
  width: 400rpx;
}

.wx-tel {
  color: rgb(75, 74, 74) !important;
  font-size: 30rpx !important;
  font-size-adjust: 0.5;
  padding-top: 100rpx;
  vertical-align: middle;
  height: 300rpx;
}

.qrcode-bg {
  width: 100%;
  height: 1000rpx;
  margin: 0 auto;
  position: absolute;
  top: 160rpx;
}


.qrcode-bg image {
  width: 100%;
  height: 100%;
}

.container {
  background-color: #62B28F;
}

.green {
  background-color: #62B28F;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100%;
}

.qrcode-location {
  display: inline-flex;
  height: 34px;
  color: white;
  background-color:rgba(255,255,255,0.40);
  border-radius: 8rpx;
  margin-left: 13px;
  margin-top:16px;
  padding-right: 16px;
  padding-left: 16px;
}

.city-line {
  display: none;
}

.goLiveshow{
  margin-top: 1100rpx;
  text-align: center;
  color: rgb(75, 74, 74);
  font-weight: 600;
}