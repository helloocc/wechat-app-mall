<view class="list-box">
  <view class="form-item">
    <van-row gutter="20">
      <van-col span="8" class="form-label">我的头像</van-col>
      <van-col span="16" class="form-value">
        <image src="../../../images/icon/livestart/unlogin.svg" class="user-avatar"></image>
        <image src="../../../images/icon/livestart/jing.svg" class="triangle-icon"></image>
      </van-col>
    </van-row>
  </view>
  <view class="form-item">
    <van-row gutter="20">
      <van-col span="8" class="form-label">我的昵称</van-col>
      <van-col span="16" class="form-value" bindtap="handleNameShow">
        {{userInfo.nickname || "未设置"}}
        <image src="../../../images/icon/livestart/jing.svg" class="triangle-icon"></image>
      </van-col>
    </van-row>
  </view>
  <view class="form-item">
    <van-row gutter="20">
      <van-col span="8" class="form-label">手机号</van-col>
      <van-col span="16" class="form-value">{{userInfo.phone}}</van-col>
    </van-row>
  </view>
  <view class="form-item">
    <van-row gutter="20">
      <van-col span="16" class="form-label">微信号(出票默认填写)</van-col>
      <van-col span="8" class="form-value" bindtap="handleWechatShow">
        {{userInfo.wechat|| "未设置"}}
        <image src="../../../images/icon/livestart/jing.svg" class="triangle-icon"></image>
      </van-col>
    </van-row>
  </view>
</view>

<van-popup show="{{ showName }}" round closeable position="bottom" custom-style="height: 30%" bind:close="handleNameClose">
  <view class="popup-title">修改昵称</view>
  <input class="popup-input" type="text" value="{{userInfo.nickname}}" placeholder="输入昵称" bindinput="handleInputName" />
  <button class="popup-btn" bindtap="handleNameUpdate">确定</button>
</van-popup>

<van-popup show="{{ showWechat }}" round closeable position="bottom" custom-style="height: 30%" bind:close="handleWechatClose">
  <view class="popup-title">修改微信号</view>
  <input class="popup-input" type="text" value="{{userInfo.wechat}}" placeholder="输入微信号" bindinput="handleInputWechat" />
  <button class="popup-btn" bindtap="handleWechatUpdate">确定</button>
</van-popup>