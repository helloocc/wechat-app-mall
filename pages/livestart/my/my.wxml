<view wx:if="{{isLogin}}" class="cell" bindtap="handleClickLoginExit">
  <view class="flex-center">
    <image class="list-icon" width="20" src="../../../images/icon/livestart/tuichu.svg" />
    <text class="ml-md fs-md">退出登录</text>
  </view>
  <image class="arrow-right" src="../../../images/icon/livestart/jing.svg" />
</view>